{# Template de Base #}
<!DOCTYPE html>

<html lang="{{ app.request.locale }}">

{# Block Header (MÃ©ta, css, etc) #}
{% block header %}

    {% embed "include/header.html.twig" %}{% endembed %}

{% endblock header %}

<body class="{% block body_class %}{% endblock %}">

{# Navigation Globale #}
{% block navigation %}

    <header>

        {% embed "include/navigation.html.twig" %}{% endembed %}

    </header>

{% endblock navigation %}

<main>
    {# Fil d'ariane #}
    {% block fil_ariane %}

        {% embed "include/fil-ariane.html.twig" %}{% endembed %}

    {% endblock fil_ariane %}

    {# Corps du document #}
    {% block content %}{% endblock content %}

</main>

{# Pied de page #}
<footer>

    {% block footer %}

        {% embed "include/footer.html.twig" %}{% endembed %}

    {% endblock footer %}

</footer>

{# Javascripts #}
{% block javascripts %}
    <script>
        const Essais_ARCHIVE = "{{ constant('AppBundle\\Entity\\Essais::ARCHIVE') }}";
        const Essais_REFUS = "{{ constant('AppBundle\\Entity\\Essais::REFUS') }}";
        const Essais_FAISABILITE_EN_ATTENTE = "{{ constant('AppBundle\\Entity\\Essais::FAISABILITE_EN_ATTENTE') }}";
        const Essais_CONVENTION_SIGNATURE = "{{ constant('AppBundle\\Entity\\Essais::CONVENTION_SIGNATURE') }}";
        const Essais_ATTENTE_DE_MEP = "{{ constant('AppBundle\\Entity\\Essais::ATTENTE_DE_MEP') }}";
        const Essais_INCLUSIONS_OUVERTES = "{{ constant('AppBundle\\Entity\\Essais::INCLUSIONS_OUVERTES') }}";
        const Essais_INCLUSIONS_GELEES = "{{ constant('AppBundle\\Entity\\Essais::INCLUSIONS_GELEES') }}";
        const Essais_INCLUSIONS_CLOSES_SUIVI = "{{ constant('AppBundle\\Entity\\Essais::INCLUSIONS_CLOSES_SUIVI') }}";
        const Essais_QUERIES_ET_FINALISATION = "{{ constant('AppBundle\\Entity\\Essais::QUERIES_ET_FINALISATION') }}";
        const Essais_CLOSE_EN_ATTENTE_PAYEMENT = "{{ constant('AppBundle\\Entity\\Essais::CLOSE_EN_ATTENTE_PAYEMENT') }}";
        const Essais_AUTRE = "{{ constant('AppBundle\\Entity\\Essais::AUTRE') }}";
        const Patient_VIVANT = "{{ constant('AppBundle\\Entity\\Patient::VIVANT') }}";
        const Inclusion_OUI_SORTIE = "{{ constant('AppBundle\\Entity\\Inclusion::OUI_SORTIE') }}";
    </script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('dist/js/global.min.js') }}"></script>

    {% if app.environment != "dev" %}
        <script type="text/javascript" charset="utf-8" src="{{ asset('/cometchat/js.php') }}" async></script>
        <link type="text/css" rel="stylesheet" media="all" href="{{ asset('/cometchat/css.php') }}">
    {% endif %}

{% endblock javascripts %}

</body>

</html>
