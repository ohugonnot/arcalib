{% extends 'base.html.twig' %}

	{# Variables #}
	{% if app.request.get("_route") == 'addDocument' %}

        {% set title_page = "Ajouter un nouveau document" %}
        {% set description_page = "Création d'un nouveau document" %}

    {% elseif app.request.get("_route") == 'editDocument' %}

        {% set title_page = "Modifier " %}
        {% set description_page = "Édition du document" %}

    {% endif %}
	
	{# Réécriture SEO #}
	{% block header %}

        {% embed "include/header.html.twig" %}

            {# Titre #}
            {% block seo_title %}

                {{ title_page }} - ArcOffice

            {% endblock seo_title %}

            {# Description #}
            {% block seo_description %}

                {{ description_page }}

            {% endblock seo_description %}

        {% endembed %}

    {% endblock header %}

	{# Body Class #}
	{% block body_class %}arcoffice-edition{% endblock %}

	{# Section 'Fil d'ariane' #}

	{% block fil_ariane %}

        {% embed "include/fil-ariane.html.twig" with { page_name : title_page } %}

            {% block fil_ariane_link %}

                <li class="breadcrumb-item d-flex align-items-center">

                    <a href="{{ path('inclusion_list_documents', {id: form.vars.value.inclusion.id }) }}">Documents de
                        l'inclusion N° {{ form.vars.value.inclusion.numInc }}</a>

                </li>

            {% endblock %}

        {% endembed %}

    {% endblock fil_ariane %}

 {# Section  #}

	{% block content %}

        {# Section Principale #}
        <section class="section-main">

            <div class="container">

                <div class="row">

                    {# Colonne Édition d'une document #}
                    <div class="col col-arcoffice col-arc-editer">

                        {{ form_start(form) }}

                        {% form_theme form 'form/submit.html.twig' %}

                        {# Titre + Boutons #}
                        <div class="form-title d-flex align-items-center">

                            {{ title_page }}

                            <div class="ml-auto mr-1">

                                {# Supprimer #}
                                {% if form.vars.value.id %}

                                    {% include 'include/liste/btn-supprimer.html.twig' with {

                                        title : "Supprimer le document",
                                        route_delete : 'deleteDocument',
                                        route_liste : 'inclusion_list_documents',
                                        route_liste_param : {id: form.vars.value.inclusion.id},
                                        message: "Le document a été supprimée.",
                                        id: form.vars.value.id

                                    } %}

                                {% endif %}

                                {% if app.request.get('_route') == 'editDocument' %}

                                    {# Bouton 'Ajouter/Consulter le PDF' #}
                                    <button type="button" data-id='{{ form.vars.value.id }}'
                                            class="btn btn-sm btn-outline-info title-tooltip document-modal-button"
                                            title='Ajouter/Consulter les PDF'>

                                        <i class="fa
                                            {% if form.vars.value.file != null %}
                                                fa-file-text
                                            {% else %}
                                                fa-upload
                                            {% endif %}
                                            " aria-hidden="true"></i>

                                    </button>

                                {% endif %}

                                {# Enregistrer #}
                                {{ form_widget(form.envoyer, {
                                    'fa' : 'fa-check',
                                    'right' : true,
                                    'label' : ' ',
                                    'attr': {
                                        'class': 'btn btn-sm btn-outline-success title-tooltip',
                                        'title': "Enregistrer le document"
                                    }
                                }) }}

                            </div>

                        </div>

                        {# CORPS #}
                        <div class="form-row form-group">

                            {# date #}
                            <div class="col">

                                {{ form_label(form.date) }}

                                {{ form_errors(form.date) }}

                                {{ form_widget(form.date, { 'attr': { 'class': 'form-control form-control-sm js-datepicker' } }) }}

                            </div>
                        </div>


                        {# jma #}
                        <div class="form-row form-group">
                            <div class="col">

                                {{ form_label(form.jma) }}

                                {{ form_errors(form.jma) }}

                                {{ form_widget(form.jma, { 'attr': { 'class': 'form-control form-control-sm' } }) }}

                            </div>

                        </div>


                        <div class="form-row form-group">
                            {# type #}
                            <div class="col">

                                {{ form_label(form.type) }}

                                {{ form_errors(form.type) }}

                                {{ form_widget(form.type, { 'attr': { 'class': 'form-control form-control-sm', "required": "required" } }) }}

                            </div>


                        </div>


                        <div class="form-row form-group">

                            {# Description #}
                            <div class="col">

                                {{ form_label(form.description) }}

                                {{ form_errors(form.description) }}

                                {{ form_widget(form.description, { 'attr': { 'class': 'form-control form-control-sm' } }) }}

                            </div>

                        </div>


                        <div class="form-row form-group">

                            {# Auteur #}
                            <div class="col">

                                {{ form_label(form.auteur) }}

                                {{ form_errors(form.auteur) }}

                                {{ form_widget(form.auteur, { 'attr': { 'class': 'form-control form-control-sm' } }) }}

                            </div>

                        </div>


                        {# Fleches #}
                        <div class="form-row form-group">

                            <div class="col">
                                {% if prev is defined and prev %}

                                    <b>Préc.&nbsp;</b>
                                    <br>
                                    <a href="{{ path('editDocument', {id: prev.id}) }}"><i
                                                class="fa fa-chevron-circle-left fa-3x mr-1 mt-4"
                                                aria-hidden="true"></i></a>


                                {% endif %}
                            </div>

                            <div class="col align-items-center">
                                {% if count is defined and count > 0 %}
                                    <span> {{ index+1 }}/{{ count }} </span>

                                    <br>
                                    <a href="{{ path('inclusion_list_documents', {id: form.vars.value.inclusion.id }) }}">
                                        <i class="fa fa-list fa-2x mt-2" aria-hidden="true"
                                           title='Liste des documents'></i>
                                    </a>
                                    <a href="{{  path("addDocument", {id: form.vars.value.inclusion.id}) }}">
                                        <i class="fa fa-plus-circle fa-2x mt-4" aria-hidden="true"></i>
                                    </a>
                                {% endif %}
                            </div>

                            <div class="col">
                                {% if next is defined and next %}

                                    <b>&nbsp;Suiv.</b>

                                    <a href="{{ path('editDocument', {id: next.id}) }}">
                                        <i class="fa fa-chevron-circle-right fa-3x mr-2 mt-4 "
                                                aria-hidden="true"></i></a>

                                {% endif %}
                            </div>

                        </div>


                        {{ form_end(form) }}


                    </div>

                    {# Colonne view pdf #}
                    {% if app.request.get('_route') == 'editDocument' %}

                        <div data-id='{{ form.vars.value.id }}' id="viewer" style="padding: 0 0; height: 750px;" class="col-7 col-arcoffice col-arc-editer">

                            <object {% if url == null %}style="display: none;"{% endif %}  width='100%' height="750" data="{% if url != null %}{{ url }}{% endif %}"
                                    type="application/pdf">
                                <embed src="{% if url != null %}{{ url }}{% endif %}" type="application/pdf"/>
                            </object>

                        </div>

                    {% endif %}

                    {# Colonne liste pdf #}

                    <div class="col-3 col-arcoffice col-arc-editer">

                        {% if form.vars.value.inclusion.patient.id is defined %}
                            {% set patient = form.vars.value.inclusion.patient %}
                            Retour dossier Patient : <a href="{{ path("patient", {id: patient.id}) }}">
                                {{ patient.nomPrenom }}
                            </a>

                        {% endif %}



                      <div class="col">
                            {% if prev is defined and prev %}

                                 
                                <a href="{{ path('editDocument', {id: prev.id}) }}"> <i
                                            class="fa fa-chevron-circle-left fa-2x mr-3 mt-4"
                                            aria-hidden="true"></i></a>

                            {% endif %}


                            {% if next is defined and next %}

                                <a href="{{ path('editDocument', {id: next.id}) }}">
                                        <i class="fa fa-chevron-circle-right fa-2x ml-0 mt-4 "
                                                aria-hidden="true"></i></a>

                            {% endif %}
                         </div>

                        <br>

                        {% if allDocuments is defined %}

                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">JMA</th>
                                    <th scope="col">Type</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for document in allDocuments %}
                                    <tr {% if document.id == form.vars.value.id %}class="item-selected"{% endif %}>
                                        <td scope="row">
                                            <a href="{{ path("editDocument", {id: document.id}) }}">{{ document.date|date("d/m/Y") }}
                                            </a>
                                        </td>

                                        <td>{{ document.jma }}</td>

                                        <td>
                                            {% if document.file == null %}<i style='color: #17a2b8;'
                                                                             class='fa fa-upload'></i>{% endif %} {{ document.type }}

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                        <style>
                            .item-selected {
                               font-weight: bold;
                                background-color:silver;
                                border: 2px solid blue;
                            }

                            .table td, .table th {
                                padding: .2em;
                                vertical-align: middle;
                            }
                        </style>
                    </div>


                    {# Modal - Ajouter/Éditer une document PDF #}

                    <div class="modal fade arcoffice-protocole-pdf" id="arcoffice-document-pdf" tabindex="-1"
                         role="dialog" aria-labelledby="Ajouter/Consulter les PDFs du protocole" aria-hidden="true">

                        <div class="modal-dialog modal-md" role="document">

                            <div class="modal-content">

                                {# Entête #}
                                <div class="modal-header modal-header-violet">

                                    <p class="modal-title">Ajouter / Consulter le PDF de le document</p>

                                    <button @click='cancel' type="button" class="close" data-dismiss="modal"
                                            aria-label="Close">

                                        <span aria-hidden="true">&times;</span>

                                    </button>

                                </div>

                                {#  CORPS MODAL ajouter un document #}
                                <div class="modal-body">

                                    <form>


                                        {# PDF N°1 #}
                                        <div id='document-input' class="form-row form-group">

                                            {# Input File #}
                                            <label class="col-5 col-form-label">Document</label>

                                            <label class="custom-file">

                                                <span id='document-file' style='width:260px' class="custom-file-control"></span>
                                                <span id='document-loader' class="loader ml-2" style='display:none'></span>

                                            </label>

                                        </div>

                                        <div id='document-download' class="form-row form-group">

                                            <label for="document-pdf" class="col-2 col-form-label">Document</label>

                                            <div class="col d-flex align-items-center">

                                                {# Voir le PDF #}
                                                <a href="" target="_blank" class="btn btn-sm btn-info">

                                                    <i aria-hidden="true" class="fa fa-arrow-right"></i> Voir le PDF

                                                </a>

                                                {# Supprimer le PDF #}
                                                <button type="button"
                                                        class="ml-2 btn btn-sm btn-outline-danger remove-document-button">
                                                    <i aria-hidden="true" class="fa fa-trash"></i></button>

                                                {# Loader #}


                                            </div>

                                        </div>

                                    </form>

                                </div>

                                {# Pied de page  modal#}
                                <div class="modal-footer">

                                    <div class="ml-auto">

                                        <button type="button" class="btn btn-sm btn-outline-secondary"
                                                data-dismiss="modal">Fermer
                                        </button>

                                    </div>

                                </div>

                                {# Fin MODAL ajouter un document #}

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </section>

    {% endblock content %}